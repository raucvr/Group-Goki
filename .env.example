# Required API Keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# JWT Authentication Secret (REQUIRED)
# Generate with: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_randomly_generated_32_char_secret_here

# CORS Configuration (comma-separated origins)
# Development:
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Optional: Direct provider keys (fallback when OpenRouter is unavailable)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_AI_API_KEY=

# Database
DATABASE_URL=sqlite://./data/group-goki.db

# Server
GATEWAY_PORT=3100
WEB_PORT=3000

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Battle Royale Configuration
JUDGE_MODEL_ID=anthropic/claude-sonnet-4
MAX_PARALLEL_MODELS=5
MAX_MONTHLY_BUDGET_USD=100
